<!doctype html>
    <head>
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
        <title>{{title}}</title>
    </head>
    <body>
        <h1>{{header}}</h1>
        <hr>
        <table class="table table-dark">
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Character</th>
                <th>Department</th>
                <th>Job</th>
            </tr>

            {{#each credits}}
                <tr>
                    <th>{{id}}</th>
                    <th><a href='/person/{{id}}'>{{name}}</th>
                    <th>{{character}}</th>
                    <th>{{department}}</th>
                    <th>{{job}}</th>
                </tr>
            {{/each}}
        </table>
    </body>
</html>